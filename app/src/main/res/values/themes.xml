<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Sakta" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/sakta_primary</item>
        <item name="colorSecondary">@color/sakta_secondary</item>
        <item name="colorSurface">@color/sakta_surface</item>
        <item name="android:windowBackground">@color/sakta_bg</item>
        <item name="toolbarStyle">@style/Widget.Material3.Toolbar</item>
        <item name="android:statusBarColor">@color/sakta_primary</item>
        <item name="android:navigationBarColor">@color/sakta_surface</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Sakta.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/sakta_primary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/sakta_surface</item>
    </style>

    <style name="ShapeAppearanceOverlay.Sakta.RoundedMedium">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18dp</item>
    </style>

    <style name="TextAppearance.Sakta.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/sakta_text_primary</item>
    </style>

    <style name="TextAppearance.Sakta.Body">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/sakta_text_muted</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>
