<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="172dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="false"
    app:strokeColor="@color/sakta_divider"
    app:strokeWidth="1dp"
    app:cardBackgroundColor="@color/sakta_surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="12dp">

        <!-- большая иконка категории -->
        <ImageView
            android:id="@+id/icon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_category_food"
            android:contentDescription="@string/undefined" />

        <!-- название категории -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Сладкое"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <!-- мини-фото (пример блюда) -->
        <ImageView
            android:id="@+id/thumb"
            android:layout_width="84dp"
            android:layout_height="54dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_report_image"
            android:contentDescription="@string/undefined"
            android:background="@color/sakta_bg"
            android:padding="0dp"/>

        <!-- счётчик позиций -->
        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="12 позиций"
            android:textColor="@color/sakta_text_muted"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
